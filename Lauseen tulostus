    <h1>Kirjoita lause</h1>
    Lause: <input id="lause"/> <br/>
    <button type="button" onclick="tulostaLause();">Paina</button>
    <br/><br/>
    Lauseesi: 
    <br/><br/>
    <div id="laatikko">
    </div>
    <script>
        function tulostaLause(){
            var lause = document.getElementById("lause").value;
            document.getElementById("laatikko").innerHTML = lause;
        }
     </script>
